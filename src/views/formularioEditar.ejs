<%- layout('layouts/main') %>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card mt-5 text-center">
        <div style="margin-bottom:1%; background-color:#C28DEA;" class="card-header">
          <h3>Actualizar Producto </h3>
        </div>
        <div class="form-body">
          <form class="registrarProducto" action="/actualizarProducto/<%= producto._id %> " method="POST"
            enctype="multipart/form-data">
            <div class="form-group">
              <input type="text" name="nombre" value="<%= producto.nombre %> " placeholder="Nombre"
                class="form-control mb-3">
            </div>
            <div class="form-group">
              <input type="text" name="precio" value="<%= producto.precio %> " placeholder="Precio"
                class="form-control mb-3">
            </div>
            <div class="form-group">
              <input type="text" name="cantidad" value="<%= producto.cantidad %> " placeholder="Cantidad"
                class="form-control mb-3">
            </div>
            <select name="categoria" class="form-select form-select-lg mb-3">
                <% if(producto.categoria === 'album'){ %>
                    <option >Categoria</option>
                    <option value="albums" selected>Albums</option>
                    <option value="lightstick">Light Stick</option>
                    <option value="preventas">Preventas </option>
                <%}%>
                <% if(producto.categoria === 'lightstick'){ %>
                    <option >Categoria</option>
                    <option value="albums" >Albums</option>
                    <option value="lightstick" selected>Light Stick</option>
                    <option value="preventas">Preventas </option>
                <%}%>
                <% if(producto.categoria === 'preventas'){ %>
                    <option >Categoria</option>
                    <option value="albums" >Albums</option>
                    <option value="lightstick">Light Stick</option>
                    <option value="preventas" selected>Preventas </option>
                <%} else{%>
                    <option selected>Categoria</option>
                    <option value="albums">Albums</option>
                    <option value="lightstick">Light Stick</option>
                    <option value="preventas">Preventas </option>
                <% } %> 
            </select>
            <div class="form-group">
              <textarea name="descripcion" rows="5" cols="50" 
                placeholder="Escribe una descripciÃ³n"><%= producto.descripcion %></textarea>
            </div>
            <div class="form-group">
              <div class="form-group custom-file">
                <input required style="margin-top: 2px;" type="file" name="image"
                  class="custom-file-input" id="inputGroupFile02">
              </div>
            </div>

            <div style="margin-top: 5%;" class="d-grid gap-2 col-6 mx-auto">
              <button type="submit" class="btn btn-dark mb-3" class="fal
                fa-user-plus">Actualizar</button>

            </div>


          </form>
        </div>
      </div>
    </div>
  </div>
