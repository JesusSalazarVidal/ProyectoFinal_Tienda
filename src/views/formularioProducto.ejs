<%- layout('layouts/main') %>
<div class="row">
  <div class="col-md-4 offset-md-4">
    <div class="card mt-4 text-center">
      <div class="card-header">
        <h3>Registrar Producto</h3>
      </div>
      <div class="card-body">
        <form action="/registrarProducto" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <input type="text" name="nombre" placeholder="Nombre" class="form-control mb-3">
          </div>
          <div class="form-group">
            <input type="text" name="precio" placeholder="Precio" class="form-control mb-3">
          </div>
          <div class="form-group">
            <input type="text" name="cantidad" placeholder="Cantidad" class="form-control mb-3">
          </div>
          <select name="categoria" class="form-select form-select-lg mb-3">
            <option selected>Categoria</option>
            <option value="albums">Albums</option>
            <option value="lightstick">Light Stick</option>
            <option value="preventas">Preventas </option>
          </select>
          <div class="input-group mb-3">
            <div class="custom-file">
              <input style="margin-top: 2px;" type="file" name="image" class="custom-file-input" id="inputGroupFile02">
            </div>
          </div>

          <div class="d-grid gap-2 col-6 mx-auto">
            <button type="submit" class="btn btn-dark mb-3" class="fal fa-user-plus">Registrar</button>
            
          </div>    
          
          
        </form>
      </div>
    </div>
  </div>
</div>




  


