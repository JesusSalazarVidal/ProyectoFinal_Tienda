<%- layout('layouts/main') %>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card mt-5 text-center">
        <div style="margin-bottom:1%; background-color:#C28DEA;" class="card-header">
          <h3>Registrar Producto</h3>
        </div>
        <div class="form-body">
          <form class="registrarProducto" action="/registrarProducto" method="POST"
            enctype="multipart/form-data">
            <div class="form-group">
              <input type="text" name="nombre" placeholder="Nombre"
                class="form-control mb-3">
            </div>
            <div class="form-group">
              <input type="text" name="precio" placeholder="Precio"
                class="form-control mb-3">
            </div>
            <div class="form-group">
              <input type="text" name="cantidad" placeholder="Cantidad"
                class="form-control mb-3">
            </div>
            <select name="categoria" class="form-select form-select-lg mb-3">
              <option selected>Categoria</option>
              <option value="albums">Albums</option>
              <option value="lightstick">Light Stick</option>
              <option value="preventas">Preventas </option>
            </select>
            <div class="form-group">
              <textarea name="descripcion" rows="10" cols="50"
                placeholder="Escribe una descripciÃ³n"></textarea>
            </div>
            <div class="form-group">
              <div class="form-group custom-file">
                <input style="margin-top: 2px;" type="file" name="image"
                  class="custom-file-input" id="inputGroupFile02">
              </div>
            </div>

            <div style="margin-top: 5%;" class="d-grid gap-2 col-6 mx-auto">
              <button type="submit" class="btn btn-dark mb-3" class="fal
                fa-user-plus">Registrar</button>

            </div>


          </form>
        </div>
      </div>
    </div>
  </div>
